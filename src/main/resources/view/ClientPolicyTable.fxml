<?xml version="1.0" encoding="UTF-8" ?>

<?import javafx.scene.control.TableColumn ?>
<?import javafx.scene.control.TableView ?>

<?import javafx.scene.control.Label?>
<TableView fx:id="policyTableView" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <placeholder>
        <Label text="No policies under this client at the moment."/>
    </placeholder>
    <columns>
        <TableColumn fx:id="policyId" editable="false" minWidth="80.0" prefWidth="100.0" reorderable="false" text="Policy ID" />
        <TableColumn fx:id="policyName" editable="false" minWidth="120.0" prefWidth="300.0" reorderable="false" text="Policy Name" />
    </columns>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</TableView>