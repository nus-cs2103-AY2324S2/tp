<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">

    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>

    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="BASELINE_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
        <FlowPane fx:id="tags" />
      </HBox>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="salary" styleClass="cell_small_label" text="\$salary" managed="false"/>
      <Label fx:id="employment" styleClass="cell_small_label" text="\$employment" managed="false"/>
      <Label fx:id="product" styleClass="cell_small_label" text="\$product" managed="false"/>
      <Label fx:id="price" styleClass="cell_small_label" text="\$price" managed="false"/>
      <Label fx:id="skill" styleClass="cell_small_label" text="\$skill" managed="false"/>
      <Label fx:id="commission" styleClass="cell_small_label" text="\$commission" managed="false"/>
      <Label fx:id="note" styleClass="cell_small_label" text="\$note" managed="false"/>
      <Label fx:id="rating" styleClass="cell_small_label" text="\$rating" managed="true"/>
    </VBox>
    <HBox alignment="TOP_RIGHT">
      <Region HBox.hgrow="ALWAYS" />
      <Label fx:id="pin" styleClass="cell_big_label" text="\$pin" managed="false" />
    </HBox>
  </GridPane>
</HBox>

