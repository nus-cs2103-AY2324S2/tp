<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" fillHeight="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox id="cardPane" fx:id="cardPane" minWidth="260.0">
        <GridPane HBox.hgrow="ALWAYS">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
          </columnConstraints>
          <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
              <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
              <Label fx:id="id" styleClass="cell_big_label">
                <minWidth>
                  <!-- Ensures that the label text is never truncated -->
                  <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
              </Label>
              <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
            </HBox>
            <FlowPane fx:id="tags">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin>
               </FlowPane>
            <Label fx:id="moneyOwed" styleClass="cell_small_label" text="\$moneyOwed">
                  <VBox.margin>
                     <Insets bottom="5.0" />
                  </VBox.margin></Label>
            <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" />
          </VBox>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
        </GridPane>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
