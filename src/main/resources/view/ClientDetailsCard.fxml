<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane styleClass="client-details" prefHeight="250.0" prefWidth="700.0" fitToWidth="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <content>
       <GridPane prefHeight="250.0" prefWidth="700.0">
        <columnConstraints>
          <ColumnConstraints percentWidth="50" />
          <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
            <HBox GridPane.columnSpan="2">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="15" />
                </padding>
                <children>
                    <Label fx:id="name" styleClass="cell_big_label" text="\$full" wrapText="true" />
                </children>
            </HBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="15" />
                </padding>
                <FlowPane fx:id="tags" />
                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
                <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true"/>
                <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
                <Label fx:id="birthday" styleClass="cell_small_label" text="\$birthday" wrapText="true" />
                <Label fx:id="priority" styleClass="cell_small_label" text="\$priority" wrapText="true" />
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="15" />
                </padding>
                <children>
                    <Label fx:id="lastMet" styleClass="cell_small_label" text="\$lastMet" wrapText="true" />
                    <Label fx:id="schedule" styleClass="cell_small_label" text="\$Schedule" wrapText="true" />
                </children>
            </VBox>
         </children>
      </GridPane>
   </content>
</ScrollPane>
